<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgobje"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/anton"
        android:text="Acondicionamiento Fisico"
        android:textColor="#EDEDED"
        android:textSize="34sp"/>

    <Spinner
        android:id="@+id/spinnerFitnessGoals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Objetivos"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/checkboxpeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#0B0101"
        android:buttonTint="#F30202"
        android:text="Perder Peso"
        android:textColor="#FDFDFD"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkboxmasamuscular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:buttonTint="#FF0000"
        android:text="Ganar Masa Muscular"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/checkboxresistencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:buttonTint="#FD0505"
        android:text="Mejorar Resistencia"
        android:textColor="#FDFDFD"
        android:textSize="24sp" />

    <!-- Aquí puedes agregar más checkboxes para otros objetivos -->

    <Button
        android:id="@+id/btnSaveGoals"
        android:layout_width="wrap_content"
        android:backgroundTint="#ff5757"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Guardar Objetivos"
        app:iconTint="#120707" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:backgroundTint="#ff5757"
        android:onClick="Volver"
        />

</LinearLayout>
