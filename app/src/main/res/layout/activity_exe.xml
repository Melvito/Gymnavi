<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondito2">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona un grupo muscular:"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:textColor="#8f8e8e"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Volver"
            android:backgroundTint="#ff5757"
            android:onClick="vuelve"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#ff5757"
            android:onClick="openExerciseList"
            android:tag="Pecho">

            <ImageButton
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="openExerciseList"
                android:src="@drawable/pecho1"
                android:tag="Pecho" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#ff5757"
            android:onClick="openExerciseList"
            android:tag="Espalda">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/espalda2"
                android:tag="Espalda"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="openExerciseList"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#ff5757"
            android:onClick="openExerciseList"
            android:tag="Biceps">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/biceps3"
                android:tag="Biceps"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="openExerciseList"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#ff5757"
            android:onClick="openExerciseList"
            android:tag="Triceps">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/triceps4"
                android:tag="Triceps"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="openExerciseList"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#ff5757"
            android:onClick="openExerciseList"
            android:tag="Pierna">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pierna5"
                android:tag="Pierna"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="openExerciseList"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>